{
  "name": "gmless-trpg",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src/client",
    "src/server",
    "src/game"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:full": "concurrently \"npm run docker:up\" \"npm run dev:server\" \"npm run dev:client\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "build": "npm run build --workspaces",
    "test": "vitest",
    "test:connections": "tsx scripts/test-connections.ts",
    "diagnose:db": "tsx scripts/diagnose-database-url.ts",
    "diagnose:network": "tsx scripts/diagnose-network.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}